<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStytle"
        android:text="设置中心" />

    <com.itheima.mobilesafe74.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe74"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        mobilesafe:destitle="自动更新设置" />
    <!-- SettingItemView需要在构建布局的时候指定title和des字符串的内容 -->
    <!-- 自定义属性 -->

    <com.itheima.mobilesafe74.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe74"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="归属地的显示设置已关闭"
        mobilesafe:deson="归属地的显示设置已开启"
        mobilesafe:destitle="电话归属地的显示设置" />

    <com.itheima.mobilesafe74.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>